{
    "$schema": "https://getcomposer.org/schema.json",
    "name": "deplox/laravel-essentials",
    "type": "library",
    "description": "Opinionated defaults for Laravel projects.",
    "license": "MIT",
    "authors": [
        {
            "name": "Jona Goldman",
            "email": "jonagoldman@gmail.com"
        }
    ],
    "require": {
        "php": "^8.4",
        "laravel/framework": "dev-12.x-opinionated as 12.52.0"
    },
    "repositories": [
        {
            "type": "git",
            "url": "https://github.com/deplox/laravel-framework"
        }
    ],
    "autoload": {
        "psr-4": {
            "Deplox\\Essentials\\": "src/"
        }
    },
    "extra": {
        "laravel": {
            "providers": [
                "Deplox\\Essentials\\EssentialsServiceProvider"
            ]
        }
    },
    "config": {
        "optimize-autoloader": true,
        "preferred-install": "dist",
        "sort-packages": true,
        "allow-plugins": {
            "pestphp/pest-plugin": true
        }
    },
    "minimum-stability": "stable",
    "prefer-stable": true
}
